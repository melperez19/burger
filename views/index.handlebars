{{!-- ---------------------------------- Add New Burger Form ---------------------------------------------}}

<div class="container">

  <h1 class="text-center"> <img src="/assets/img/favicon.jpg" width="35" height="35" />
    Eat-Da-Burger <img src="/assets/img/favicon.jpg" width="35" height="35" /></h1>

  <div class="row colorStrip">
    <div class="col-12"></div>
  </div>

  <div class="row">
    <h3> Add a new burger of your choice! </h3>
    <form id="addBurger" class="create-form">
      <div class="form-group">
        <input type="text" id="addBurger" name="burger_name">
        <button type="submit"> Add Burger</button>
      </div>
    </form>
  </div>

  {{!-- --------------------------------------Section for Burgers waiting to be
  Eaten----------------------------------- --}}

  <div class="row">
    <div class="col-4 section rounded">
      <h4 class="text-center">Burgers to Eat</h4>

      <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
        <li>{{this.burger_name}}

          <button id="devourBtn" data-value="true" id="check" class="btn btn-warning btn-sm" data-id={{this.id}}>Devour</button>

        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    {{!-- ---------------------------------------Sections for Devoured
    Burgers----------------------------------------------- --}}

    <div class="col-4 section rounded">
      <h4 class="text-center">Devoured Burgers</h4>

      <ul>
        {{#each burgers}}
        {{#if this.devoured}}
        <li>{{this.burger_name}}
          <button id="deleteBtn" data-value="false" data-id={{this.id}}>Delete</button>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>

    <div class="col-4"></div>


  </div>
</div>

